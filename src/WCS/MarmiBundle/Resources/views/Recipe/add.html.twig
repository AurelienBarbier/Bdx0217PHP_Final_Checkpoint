{% extends "base.html.twig" %}
{% block stylesheets %}
    <style>
        body{

            background : url('https://s-media-cache-ak0.pinimg.com/originals/8c/4c/ae/8c4caed8bcddb0b173c7cecdb1cb24c8.jpg');
            background-size: cover;
        }
        .nav-extended{
            position: fixed;
        }
        .loginform{
            margin-top: 70px;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="row loginform">

        <div class="col s12 m8 offset-m2 l6 offset-l3 card-panel ">
            <h4 class="center-align">Ajouter une recette</h4>
            <hr>
            {{ form_start(form, {'attr':{'enctype': "multipart/form-data"}}) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            {{ form_label(form.ingredients) }}

            <span class="label">Difficulté</span>
            <p class="range-field">
                <input type="range" value="10" name="difficulty" id="test5" min="0" max="20" />
            </p>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Image Principal</span>
                    <input name="image" type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Image</span>
                    <input type="file" multiple name="images[]">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload one or more files">
                </div>
            </div>
            <div class="input-field col s12">
                <select multiple name="type[]">
                    <option value="" disabled selected>Type de recette</option>
                    <option value="salt">Salée</option>
                    <option value="sugar">Sucrée</option>
                    <option value="vegan">Vegan</option>
                </select>
                <label>Type de recette</label>
            </div>
            <hr>
            <ul class="tags" data-prototype="{{ form_widget(form.ingredients.vars.prototype)|e }}">
            </ul>

            <button class="btn waves-effect waves-light right submitbtn" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
            <br>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });


        var $collectionHolder;

        // setup an "add a tag" link
        var $addTagLink = $('<a href="#" class="add_tag_link waves-effect waves-light btn col s12">Ajouter un ingrédient</a>');
        var $newLinkLi = $('<li class="col s12 addnewli"></li>').append($addTagLink);

        jQuery(document).ready(function() {
            // Get the ul that holds the collection of tags
            $collectionHolder = $('ul.tags');

            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkLi);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);

            $addTagLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addTagForm($collectionHolder, $newLinkLi);
            });
        });
        function addTagForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<li></li>').append(newForm);
            var deletebutton = $('<a href="#" class="waves-effect waves-light btn deletebtn">Supprimer l\'ingrédient</a>');
            deletebutton.click(function(e){
                e.preventDefault();

                $(this).parent().remove();
            });
            var $newFormLi = $('<li></li>').append(newForm);
            $newFormLi.append(deletebutton);
            $newLinkLi.before($newFormLi);
        }

    </script>
{% endblock %}