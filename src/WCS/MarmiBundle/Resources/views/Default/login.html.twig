{% extends "base.html.twig" %}
{% block stylesheets %}
    <style>
        body{

            background : url('https://s-media-cache-ak0.pinimg.com/originals/8c/4c/ae/8c4caed8bcddb0b173c7cecdb1cb24c8.jpg');
            background-size: cover;
        }
        .nav-extended{
            position: fixed;
        }
        .loginform{
            margin-top: 70px;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="row loginform">

        <div class="col s12 m6 offset-m3 l4 offset-l4 card-panel ">
            <h4 class="center-align">Connexion</h4>
            <hr>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login_check') }}" method="post">
                    <div class="input-field col s12">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                <div class="input-field col s12">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" />
                </div>
                <button class="btn waves-effect waves-light right submitbtn" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </div>
{% endblock %}