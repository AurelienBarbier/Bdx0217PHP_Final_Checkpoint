<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css">
        <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
        <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
        <link href="{{ asset('css/gallery-materialize.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        {% block stylesheets %}{% endblock %}

    </head>
    <body>
    <nav class="nav-extended">
        <div class="nav-background">
            <div class="pattern active" style="background-image: url('{{ asset('pattern.jpg') }}');"></div>
        </div>
        <div class="nav-wrapper container">
            <a href="{{ path('wcs_marmi_homepage') }}" class="brand-logo">
                <img height="50" src="{{ asset('Logo.png') }}"></a>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>


            <ul class="right hide-on-med-and-down">
                <li>
                    <a href="{{ path('wcs_marmi_homepage') }}">Accueil</a></li>
                {% if app.user %}
                    <li><a href="{{ path('wcs_marmi_myrecipe') }}">Mes recettes</a></li>
                    <li><a class='dropdown-button' href='#' data-activates='feature-dropdown' data-belowOrigin="true" data-constrainWidth="false">Profil<i class="material-icons right">arrow_drop_down</i></a>

                        <!-- Dropdown Structure -->
                        <ul id="feature-dropdown" class="dropdown-content">
                            <li><a href="">Mon profil</a></li>
                            <li><a href="">Mes informations</a></li>
                            <li><a href="{{ path('logout') }}">Deconnexion</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li><a href="{{ path('wcs_marmi_register') }}">Inscription</a></li>
                    <li><a href="{{ path('wcs_marmi_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
            {% block navbarheader %}
            {% endblock %}
        </div>

        <!-- Fixed Masonry Filters -->
        {% block categorie %}{% endblock %}
    </nav>
    <ul class="side-nav" id="nav-mobile">
        <li class="active"><a href="index.html"><i class="material-icons">camera</i>Gallery</a></li>
        <li><a href="index-dark.html"><i class="material-icons">brightness_3</i>Dark Theme</a></li>
        <li><a href="blog.html"><i class="material-icons">edit</i>Blog</a></li>
        <li><a href="docs.html"><i class="material-icons">school</i>Docs</a></li>
        <li><a href="full-header.html"><i class="material-icons">fullscreen</i>Fullscreen Header</a></li>
        <li><a href="horizontal.html"><i class="material-icons">swap_horiz</i>Horizontal Style</a></li>
        <li><a href="no-image.html"><i class="material-icons">texture</i>No Image Expand</a></li>
    </ul>

        {% block body %}{% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="{{ asset('js/imagesloaded.pkgd.min.js') }}"></script>
        <script src="{{ asset('js/masonry.pkgd.min.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/materialize/0.98.0/js/materialize.min.js"></script>
        <script src="{{ asset('js/color-thief.min.js') }}"></script>
        <script src="{{ asset('js/galleryExpand.js') }}"></script>
        <script src="{{ asset('js/init.js') }}"></script>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <script>
                    Materialize.toast('{{ message }}', 3000, 'rounded')
                </script>
            {% endfor %}
        {% endfor %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
