{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recettes de la semaine</h1>

    <div class="row">
    <div class="col s12 m6">
    <div class="card">
    <div class="card-image">
    {% for recette in recettes %}
        <img src="{{ recette.image }}">

        <a href="{{ path('recette_show', { 'id': recette.id }) }}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
            <span class="card-title">{{ recette.nom }}</span>
        </div>
        <a href="{{ path('recette_edit', { 'id': recette.id }) }}">Modifier</a>
        </div>
        </div>

        </div>
    {% endfor %}

{% endblock %}

