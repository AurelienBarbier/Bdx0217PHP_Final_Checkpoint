{% block head %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>MarmiWild by Stephane R.</title>

    <!-- Bootstrap -->
    <script type="text/javascript" src="{{ asset('js/accueil.js') }}"></script>
    <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{ asset('css/accueil.css') }}" rel="stylesheet">
    <link href="{{ asset('css/navbar.css') }}" rel="stylesheet">
    <script src="{{ asset('js/navbar.js') }}"></script>
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
</head>

<body>

<div class="container-fluid" id="header">
    <div class="page-header" class="img-responsive" id="main-logo">
        <img src="{{ asset('img/Logo.png') }}" class="img-responsive">
    </div>
</div>

{% endblock %}
{% block recherche %}
<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="input-group">
                <div class="input-group-btn search-panel">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span id="search_concept">Filter by</span> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#contains">Contains</a></li>
                        <li><a href="#doNotContains">Do not Contains</a></li>
                        <li><a href="#4orMore">For 4 or more people </a></li>
                        <li><a href="#1Only">For One person  </a></li>
                        <li class="divider"></li>
                        <li><a href="#all">Anything</a></li>
                    </ul>
                </div>
                <input type="hidden" name="search_param" value="all" id="search_param">
                <input type="text" class="form-control" name="x" placeholder="Recipes terms...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block menu %}
<nav class="navbar navbar-default" role="navigation" id="nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img alt="" src="">
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#">Add Recipe</li>
                <li><a href="#">List Recipes</li>
                <li><a href="#">Show Recipe of the Day</li>
                <li><a href="#">Show Randoms Recipes</li>
            </ul>
        </div>
    </div>
</nav>
{% endblock %}

<div class="container-fluid" style="background-color: floralwhite">
    <div class="row">
        <div class="col-xs-5 col-xs-offset-5">
    {% block body %}{% endblock %}
    </div>
    </div>
</div>