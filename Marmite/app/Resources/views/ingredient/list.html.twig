{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 ">
                <h1>ALL RECIPES</h1>
            </div>
        </div>
    </div>

{% endblock %}
{% block encart %}
    {% for ingredient in ingredients %}
    <head>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
    </head>
    <div class="container">
        <div class="row" id="lightblue">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-info coupon">
                    <div class="panel-heading" id="head">
                        <div class="panel-title" id="title">
                            <i class="fa fa-heart fa-2x"></i>
                            <span class="hidden-xs">{{ ingredient.name }}</span>
                            <span class="visible-xs">{{ ingredient.id }}</span>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-6 col-md-offset-9">
                        <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}">Edit this ingredient ?</a>
                        </div>
                        <div class="col-md-9">
                            <ul class="items">
                                Gout : {{ ingredient.flavor }}
                            </ul>
                            <p>{{ ingredient.description }}</p>
                        </div>
                        <div class="col-md-3">
                            <div class="offer text-info">
                                <span class="usd"><sup></sup></span>
                                <span class="number"></span>
                                <span class="cents"><sup></sup></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <p class="disclosure"></p>
                        </div>
                        <span class="print">
                        <a href="#" class="btn btn-link"><i class="fa fa-lg fa-print"></i> Print this Ingredient</a>
                    </span>
                    </div>
                    <div class="panel-footer">
                        <div class="coupon-code">
                            <div class="col-md-6">

                            </div>
                        </div>
                        <div class="exp"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}


{% endblock %}