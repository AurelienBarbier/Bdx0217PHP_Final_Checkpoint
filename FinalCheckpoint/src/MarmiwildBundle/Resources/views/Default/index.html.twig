{% extends 'base.html.twig' %}

{% block nav %}
<nav>
    <div class="nav-wrapper" id="logo">
        <a href="{{ path('marmiwild_homepage') }}" class="brand-logo"><img src="images/Marmiwild.png"></a>
    </div>
</nav>
    <div class="nav-content">
        <ul class="tabs tabs-transparent">
            <li class="tab"><a class="orange-text text-darken-2" href="">Nos recettes</a></li>
            <li class="tab"><a class="orange-text text-darken-2" href="#test2">Les + populaires</a></li>
            <li class="tab"><a class="orange-text text-darken-2" href="{{ path('marmiwild_addRecette') }}">Ajouter des plats</a></li>
        </ul>
    </div>
{% endblock %}

{% block body %}

<div id="background">
    <form>
        <input id="search" type="text">
        <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">search</i></a>
    </form>
</div>

{% for recette in recettes %}

    <div class="row">
        <div class="col s12 m5">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{ recette.nom }}</span>
                    <p>{{ recette.temps }}</p>
                    <p>{{ recette.personne }} personnes</p>
                </div>
                <div class="card-action">
                    <a href="#">This is a link</a>
                    <a href="#">This is a link</a>
                </div>
            </div>
        </div>
    </div>

{% endfor %}

{% endblock %}