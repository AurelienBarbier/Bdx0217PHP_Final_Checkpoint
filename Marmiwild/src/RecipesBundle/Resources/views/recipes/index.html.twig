{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Wildchef</th>
                <th>Instructions</th>
                <th>Ingredients</th>
                <th>Preparationtime</th>
                <th>Cookingtime</th>
                <th>Difficulty</th>
                <th>Fednumber</th>
                <th>Quantities</th>
                <th>Type</th>
                <th>Keywords</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipes_show', { 'id': recipe.id }) }}">{{ recipe.id }}</a></td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.wildChef }}</td>
                <td>{{ recipe.instructions }}</td>
                <td>{{ recipe.ingredients }}</td>
                <td>{% if recipe.preparationTime %}{{ recipe.preparationTime|date('H:i:s') }}{% endif %}</td>
                <td>{% if recipe.cookingTime %}{{ recipe.cookingTime|date('H:i:s') }}{% endif %}</td>
                <td>{{ recipe.difficulty }}</td>
                <td>{{ recipe.fedNumber }}</td>
                <td>{{ recipe.quantities }}</td>
                <td>{{ recipe.type }}</td>
                <td>{{ recipe.keyWords }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipes_show', { 'id': recipe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('recipes_edit', { 'id': recipe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipes_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
